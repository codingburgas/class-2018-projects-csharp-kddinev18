<Page x:Class="DiabetesTracker.ViewModels.SocialMediaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:DiabetesTracker"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="SocialMediaPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#FDFDFD" Grid.Row="1" BorderThickness="1" BorderBrush="#DBDBDB" Width="125" CornerRadius="15" Margin="50 0 50 25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="35" Opacity="0.4"/>
            </Border.Effect>
            <StackPanel>

                <Button Style="{StaticResource menuButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Home" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Text="Home" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Blog" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Text="Blogs" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Favorite" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Text="Favorites" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Person" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Text="Following" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Tag" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Text="Tags" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource menuButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Analytics" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Text="Analytics" Style="{StaticResource menuButtonText}"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Border>

        <!--Main Panel-->
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="0 0 50 20" VerticalAlignment="Stretch">
            <Grid  Margin="-8 0 -8 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.4*"/>
                </Grid.ColumnDefinitions>

                <Grid Height="300" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Info Crads-->
                    <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource infoCard}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="35" Opacity="0.4"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Style="{StaticResource infoCardStack}">
                                <TextBlock x:Name="TotalLikes" Text="{Binding}" Style="{StaticResource inforCardTitle}"/>
                                <TextBlock Text="TotalLikes" Style="{StaticResource infoCardText}"/>
                            </StackPanel>

                            <materialDesign:PackIcon Kind="Close" Style="{StaticResource infocardIcon}" />

                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource infoCard}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="35" Opacity="0.4"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Style="{StaticResource infoCardStack}">
                                <TextBlock x:Name="TotalFollowers" Text="{Binding}" Style="{StaticResource inforCardTitle}"/>
                                <TextBlock Text="TotalFollowers" Style="{StaticResource infoCardText}"/>
                            </StackPanel>

                            <materialDesign:PackIcon Kind="Close" Style="{StaticResource infocardIcon}" />
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.ColumnSpan="2" Margin="425,0,0,-280">
                    <Border Style="{StaticResource infoCard}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="35" Opacity="0.4"/>
                        </Border.Effect>
                        <!--Post List-->
                        <ListView x:Name="PostsList" ItemsSource="{Binding}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource postUserNameText}" Text="{Binding Username}"/>
                                        <Image Height="350" Margin="10" Source="{Binding Image}"/>
                                        <TextBlock Style="{StaticResource postUserNameText}" Text="{Binding Content}"/>
                                        <StackPanel Orientation="Horizontal" Margin="10">
                                            <Button Style="{StaticResource postActionButton}">
                                                <materialDesign:PackIcon Kind="Like" Style="{StaticResource postActionIcon}" />
                                            </Button>
                                            <Button Style="{StaticResource postActionButton}">
                                                <materialDesign:PackIcon Kind="Favorite" Style="{StaticResource postActionIcon}" />
                                            </Button>
                                            <Button Style="{StaticResource postActionButton}">
                                                <materialDesign:PackIcon Kind="Comment" Style="{StaticResource postActionIcon}" />
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </Grid>

            </Grid>
        </StackPanel>
    </Grid>
</Page>
