        <StackPanel HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 25 10 20">
                <TextBlock Text="Home" Style="{StaticResource menuTitle}"/>
                <TextBlock Text="Blogs" Style="{StaticResource menuTitle}"/>
                <TextBlock Text="Favorites" Style="{StaticResource menuTitle}"/>
                <TextBlock Text="Following" Style="{StaticResource menuTitle}"/>
                <TextBlock Text="Tags" Style="{StaticResource menuTitle}"/>
                <TextBlock Text="Analytics" Style="{StaticResource menuTitle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Border Background="#FDFDFD" BorderThickness="1" CornerRadius="20" BorderBrush="#DBDBDB" Height="100" Width="100" VerticalAlignment="Top" Margin="0 25 10 0">
                    <Image/>
                </Border>
                <Border Background="#FDFDFD" BorderThickness="1" BorderBrush="#DBDBDB" Margin="25 10 0 0" Width="850" CornerRadius="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource postUserText}" Text="UserName"/>
                            <TextBlock Style="{StaticResource postUserText}" Text="Content"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource postActionButton}">
                                <materialDesign:PackIcon Kind="NavigateBefore" Style="{StaticResource postActionIcon}" />
                            </Button>
                            <Image x:Name="PostImage" Height="420" Width="665" Margin="10" Source="{Binding}"/>
                            <Button Style="{StaticResource postActionButton}">
                                <materialDesign:PackIcon Kind="NavigateNext" Style="{StaticResource postActionIcon}" />
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10 0 0 10">
                            <Button Style="{StaticResource postActionButton}">
                                <materialDesign:PackIcon Kind="Like" Style="{StaticResource postActionIcon}" />
                            </Button>
                            <Button Style="{StaticResource postActionButton}">
                                <materialDesign:PackIcon Kind="Favorite" Style="{StaticResource postActionIcon}" />
                            </Button>
                            <Button Style="{StaticResource postActionButton}">
                                <materialDesign:PackIcon Kind="Comment" Style="{StaticResource postActionIcon}" />
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
