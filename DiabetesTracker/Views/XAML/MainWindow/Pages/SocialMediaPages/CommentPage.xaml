<Page x:Class="DiabetesTracker.Views.CommentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiabetesTracker.Views"
      xmlns:userControls="clr-namespace:DiabetesTracker.ViewModels.UserControls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1135"
      Title="CommentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="525"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" SelectionMode="Single" ItemsSource="{Binding TagsInformation}" MaxHeight="450" HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource listViewBorder}" Height="50">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="700">
                            <TextBlock Margin="-90 0 0 0" Text="{Binding TagName}" Foreground="#2b2b2b" FontSize="15" VerticalAlignment="Center"/>
                            <TextBlock Margin="20 0 0 0" Text="{Binding PostCount}" Foreground="#2b2b2b" FontSize="15" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <userControls:TextBoxForm TextBoxHintText="Comment" TextBoxIcon="Comment" Margin="20"/>
            <Button Content="Comment" Click="CommentButton_Click" Margin="50 0 0 0" Foreground="#2b2b2b" Background="#FFFFFF" BorderBrush="#FFFFFF"/>
        </StackPanel>
    </Grid>
</Page>
